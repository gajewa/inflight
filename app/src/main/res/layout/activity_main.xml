<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/inflightButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="Inflight"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/groundButton"
        app:layout_constraintEnd_toEndOf="@+id/groundButton"
        app:layout_constraintStart_toStartOf="@+id/groundButton"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/groundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginStart="48dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="Ground"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ofertyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inflightButton" />

    <Button
        android:id="@+id/ofertyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="128dp"
        android:background="@android:drawable/alert_light_frame"
        android:text="Oferty"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/groundButton"
        app:layout_constraintTop_toBottomOf="@+id/groundButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/inflightButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoray" />

</android.support.constraint.ConstraintLayout>